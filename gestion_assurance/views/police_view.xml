		 <record model="ir.ui.view" id="f_police_view_tree">
			  <field name="name">polices.tree</field>
			  <field name="model">f.polices</field>
			  <field name="arch" type="xml">
				  <tree string="Polices">
					<field name="POL_NUMPOL"/>
					<field name="POL_ASSURE"/>
					<field name="POL_PTRPASID" />					
					<field name="POL_PTRAPID"/>	
