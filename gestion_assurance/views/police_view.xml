	  <record  model="ir.ui.view" id="police_view_form">
	    <field name="name">police.form</field>
	    <field name="model">f.polices</field>
	    <field name="arch" type="xml">
	      <form string="Polices">
		   <header> 					
					<button name="police_confirmed" type="object" states="brouillon" string="Confirmer le devis" groups="base.group_user"/>
					<button name="police_cancel" states="brouillon,encours,suspension" string="Annuler le devis" type="object" class="oe_highlight" groups="base.group_user"/>									
					<field name="state" widget="statusbar" statusbar_visible="brouillon,encours,suspension,termine,annule" statusbar_colors='{"order_confirmed":"blue"}'/>					
            </header>
	        <sheet>
				<!-- visible seulement pour le devis -->				
				<h1>
                    <label string="Devis " attrs="{'invisible': [('state','in',('encours','annule','termine'))]}"/>
					<label string="Contrat " attrs="{'invisible': [('state','in',('brouillon','annule','termine'))]}"/>					 
				</h1>
				
				
				<!-- Inf police en contrat -->
				<group>
					<group>
					    <separator colspan="4" string="Client"/>
						<field name="POL_PTRCLID" />
						<field name="POL_BPCL_CODE_AUXIL"  />
						<field name="POL_BPCL_COTE" />
						<field name="POL_CODE_SOCIETE" />						
						<field name="POL_CODE_ETABL" />	
						<separator colspan="2" />
						<separator colspan="2"/>
							
						<!-- Affichage intermediaire -->
						<separator colspan="4" string="Intermediare - Apporteur"/>
						<field name="POL_PTRINID" />
						<field name="POL_PTRAPID"/>						
						<!-- fields liaison Apporteur -->
						<separator colspan="2" />
						<separator colspan="2"/>
						<separator colspan="4" string="Police"/>						
						<field name="POL_NUMPOL" invisible="1"/>
						<field name="POL_NUM_DOSSIER" />
						<field name="POL_DATE_HEURE_EFFET" />
						<field name="POL_FRACTION" />
						<field name="POL_CODECHPRIN" />
						<field name="POL_DUREE" />
						<field name="POL_DATFIN" />
						<field name="POL_COEF_COMM" />
						<field name="POL_TAUX_APPEL" />
						<field name="POL_DATEFIN_GRATUIT" />
						<field name="POL_CARENCE" />
						<field name="POL_UNITE_CARENCE" />						
					</group>
					
					<group>
					    <separator colspan="4" string="Souscripteur - Produit" />
						<field name="POL_ASSURE"/>
						<field name="POL_PTRPASID" />
						<field name="POL_NUMPOL" invisible="1"/>
						<separator colspan="2" />
						<separator colspan="2"/>
							
						<field name="POL_TERFISC" />
						<field name="POL_CODINDICE"  />
						<field name="POL_INDICEACTU" />						
						<field name="POL_JOUR_PRELEVEMENT" />
						<field name="POL_CHARGECLIENT" />
						
						<separator colspan="4"  />
						<separator colspan="4"  />
						<field name="POL_SANTE_NONRESP" />
						<field name="POL_OPTION" />
						<field name="POL_PTRCONVID_IJ" />
						
						<separator colspan="4" string="Coassurance" />
						<field name="POL_COAREP_PRM" />
						<field name="POL_COMAPETX" />
						<field name="POL_COAREP_SIN" />
					</group>				
				</group>
				
				
			  <notebook>
					<page string="Version Police" >
						<field name="POL_VER_IDENT" >
							<tree>
								<field name="VER_TYPEMISSION" />
								<field name="VER_DATEDEB" />
								<field name="VER_DATEFIN" />
							</tree>
						</field>
					  </page>					  					  					
			  </notebook>
			  <group>
					<field name="POL_COMMENTAIRES" />
			  </group>
			  
	        </sheet>
	      </form>
	    </field>
	  </record>
